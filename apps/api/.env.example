# Buffett Screener API - Environment Variables Template
# Copy this file to .env and update the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Buffett Screener API
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://web:3000
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/buffett_screener
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# =============================================================================
# DATA INGESTION SETTINGS
# =============================================================================
INGESTION_BATCH_SIZE=100
INGESTION_RETRY_ATTEMPTS=3

# =============================================================================
# EXTERNAL PROVIDERS
# =============================================================================
# Yahoo Finance API settings
YAHOO_FINANCE_TIMEOUT=30
YAHOO_FINANCE_RATE_LIMIT=2000

# =============================================================================
# EMAIL CONFIGURATION (Mailhog for local development)
# =============================================================================
EMAIL_ENABLED=true
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_FROM_EMAIL=noreply@buffett-screener.local

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# IMPORTANT: Change this in production! Use a long random string
SECRET_KEY=dev-secret-key-change-in-production
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,api
